<%= form_for(@message, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
      <label for="message_name" class="control-label col-xs-2">名前:</label>
      <div class="col-xs-8">
        <%= f.text_field :name, :class=>'form-control', :placeholder=>'アカデミー 太郎' %>
      </div>
  </div>
  <div class="form-group">
      <label for="message_age" class="control-label col-xs-2">年齢:</label>
      <div class="col-xs-8">
        <%= f.text_field :age, :class=>'form-control', :placeholder=>'30' %>
      </div>
  </div>
  <div class="form-group">
    <label for="message_body" class="control-label col-xs-2">内容:</label>
    <div class="col-xs-8">
      <%= f.text_area :body, :class=>'form-control', :placeholder=>'内容を入力して下さい。' %>
    </div>
  </div>

  <%= f.submit class: "btn btn-sm btn-primary center-block" %>

<% end %>